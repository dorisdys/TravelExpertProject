<h3><a class="btn btn-secondary" href="/packages"><i class="fa fa-plus"></i> Create New</a> Package List</h3>
<table  class="table table-striped table-hover">
    <thead>
        <tr>
            <th>PackageID</th>
            <th>Package Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Description</th>
            <th>Package Price</th>
            <th>Commission</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>    
            <td>{{PackageId}}</td>
            <td>{{PkgName}}</td>
            <td>{{PkgStartDate}}</td>
            <td>{{PkgEndDate}}</td>
            <td>{{PkgDesc}}</td>
            <td>{{PkgBasePrice}}</td>
            <td>{{PkgAgencyCommission}}</td>
    
            <td>
                <a href="/packages/{{id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i>edit</a>
                <a href="/packages/delete/{{id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i>delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>